<div class="container mt-4">
                    
                    <!-- Review Reports Section -->
    <div class="container mt-4">
        <h2>Review Reports</h2>
        
        <!-- Report Overview -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Reports</h5>
                        <p class="card-text" id="total-reports">100</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Pending Reports</h5>
                        <p class="card-text" id="pending-reports">20</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Reviewed Reports</h5>
                        <p class="card-text" id="reviewed-reports">80</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filters -->
        <div class="row mb-4">
            <div class="col-md-8">
                <input type="text" class="form-control" id="search-bar" placeholder="Search reports...">
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary w-100" id="filter-btn">Filter</button>
            </div>
        </div>

        <!-- Reports Table -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Document Name</th>
                    <th>Submission Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="reports-table-body">
                <!-- Table rows will be dynamically populated -->
                <tr>
                    <td>23101C0037</td>
                    <td>Aadhaar Card</td>
                    <td>2024-08-01</td>
                    <td>Pending</td>
                    <td>
                        <button class="btn btn-info btn-sm">View Document</button>
                        <button class="btn btn-success btn-sm">Approve</button>
                        <button class="btn btn-danger btn-sm">Reject</button>
                        <button class="btn btn-warning btn-sm">Request More Info</button>
                    </td>
                </tr>
                <tr>
                    <td>23101C0003</td>
                    <td>Admission Letter</td>
                    <td>2024-08-15</td>
                    <td>Pending</td>
                    <td>
                        <button class="btn btn-info btn-sm">View Document</button>
                        <button class="btn btn-success btn-sm">Approve</button>
                        <button class="btn btn-danger btn-sm">Reject</button>
                        <button class="btn btn-warning btn-sm">Request More Info</button>
                    </td>
                </tr>
                <tr>
                    <td>23101B0008</td>
                    <td>Caste Certificate</td>
                    <td>2024-08-05</td>
                    <td>Pending</td>
                    <td>
                        <button class="btn btn-info btn-sm">View Document</button>
                        <button class="btn btn-success btn-sm">Approve</button>
                        <button class="btn btn-danger btn-sm">Reject</button>
                        <button class="btn btn-warning btn-sm">Request More Info</button>
                    </td>
                </tr>
                <!-- More rows as needed -->
            </tbody>
        </table>
    </div>
</div>
                  
