    <script>
        document.addEventListener('DOMContentLoaded', () => {
    // Select the specific container intended for the disbursement cards
    const disbursementContainer = document.querySelector('#disbursement-container');

    // Fetch completed disbursements from the backend
    const fetchCompletedDisbursements = async () => {
        try {
            const response = await fetch('/api/disbursements/completed'); // Adjust the API route as per your backend setup
            if (!response.ok) throw new Error('Failed to fetch disbursements');
            const disbursements = await response.json();

            // Check if the data fetched is empty
            if (disbursements.length === 0) {
                disbursementContainer.innerHTML = `<p class="text-center text-muted">No completed disbursements found.</p>`;
                return;
            }

            // Iterate over each disbursement and create a card for it
            disbursements.forEach(disbursement => {
                const card = document.createElement('div');
                card.classList.add('col');

                // Card structure with disbursement data
                card.innerHTML = `
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title">${disbursement.studentName}</h5>
                            <p class="card-text text-muted mb-2">Student ID: ${disbursement.studentID}</p>
                            <p class="card-text"><strong>Amount Disbursed:</strong> ₹${disbursement.amountDisbursed.toLocaleString()}</p>
                            <p class="card-text"><strong>Course:</strong> ${disbursement.course}</p>
                            <p class="card-text"><strong>Year:</strong> ${disbursement.year}</p>
                            <p class="card-text text-success"><strong>Date Completed:</strong> ${new Date(disbursement.dateCompleted).toLocaleDateString()}</p>
                        </div>
                    </div>
                `;

                // Append the new card to the disbursement container
                disbursementContainer.appendChild(card);
            });
        } catch (error) {
            console.error('Error fetching disbursements:', error);
            disbursementContainer.innerHTML = `<p class="text-center text-danger">Failed to load completed disbursements. Please try again later.</p>`;
        }
    };

    // Call the fetch function to initialize the content
    fetchCompletedDisbursements();
});

    </script>
